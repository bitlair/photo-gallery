extends layout

block meta
	meta(property="og:title" content="RevSpace Works in Progress")
	meta(property="og:type" content="website")
	meta(property="og:description" content=photo.filename)
	meta(property="og:image" content=absoluteThumbnail)

	meta(property="twitter:title" content="RevSpace Works in Progress")
	meta(property="twitter:card" content="summary_large_image")
	meta(property="twitter:description" content=photo.filename)
	meta(property="twitter:image" content=absoluteThumbnail)

	meta(itemprop="name" content="RevSpace Works in Progress")
	meta(itemprop="description" content=photo.filename)
	meta(itemprop="image" content=absoluteThumbnail)

block contents
	.viewImage
		if previousPhoto != null
			a.previous(href=`${pathPrefix}/view/${previousPhoto.date.date}/${previousPhoto.filename}`) ◀

		if nextPhoto != null
			a.next(href=`${pathPrefix}/view/${nextPhoto.date.date}/${nextPhoto.filename}`) ▶

		if photo.kind == 'image'
			img.large(src=`${pathPrefix}/photos/${photo.date.date}/${photo.filename}`)
		else if photo.kind == 'video'
			video.large(autoplay muted loop src=`${pathPrefix}/photos/${photo.date.date}/${photo.filename}`)
		else
			p= "not sure how to display this file..."
